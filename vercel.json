{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/proxy/solana/safety(?:/.*)?$", "dest": "/api/proxy/solana/safety.js" }, // Prioritaskan safety
    { "src": "/api/proxy(?:/.*)?$", "dest": "/api/proxy.js" }, // Proxy sebagai fallback
    { "src": "/api/(.*)", "dest": "/api/$1.js" }, // Catch-all untuk API lain
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
